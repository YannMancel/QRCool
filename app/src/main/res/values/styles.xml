
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- *********************************** FloatingActionButton ****************************** -->

    <!-- FloatingActionButton style -->
    <style name="FloatingActionButtonStyle" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="tint">@android:color/white</item>
    </style>

    <!-- *********************************** TextView ****************************************** -->

    <!-- TextView style: Label -->
    <style name="TextViewStyleLabel" parent="@style/TextAppearance.MaterialComponents.Headline6"/>

    <!-- TextView style: Content -->
    <style name="TextViewStyleContent" parent="@style/TextAppearance.MaterialComponents.Subtitle1"/>

</resources>